dev.wise.vote {
  tls {
    max_certs 22
  }

  #ยง 'proxy /voting-page ' + data.config.votingPage.docker.services.frontend.container + ':' + data.config.votingPage.port + ' {'
  proxy /voting-page voting-page:8093 {
    without /voting-page
    header_upstream Host {host}
    header_upstream X-Real-IP {remote}
    header_upstream X-Forwarded-For {remote}
    header_upstream X-Forwarded-Proto {scheme}
  }
  
  #ยง 'proxy / ' + data.config.manual.docker.services.frontend.container + ':' + data.config.manual.port + ' {'
  proxy / wise-manual:8096 {
    header_upstream Host {host}
    header_upstream X-Real-IP {remote}
    header_upstream X-Forwarded-For {remote}
    header_upstream X-Forwarded-Proto {scheme}
  }
  gzip
  timeouts {
    read 5m
    write 2m
  }
  log stdout
  errors stderr
}


{{ define "timeouts" }}
  {{ if gt (len .) 0 }}
    {{ $first := index . 0 }}
    {{ $parts := split $first "," }}
